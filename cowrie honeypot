sudo apt-get install git python3-venv libssl-dev libffi-dev build-essential libpython3-dev python3-minimal authbind
sudo adduser --disabled-password cowrie
sudo su - cowrie
git clone http://github.com/cowrie/cowrie
cd cowrie
python -m venv cowrie-env
###make copy of cowrie.cfg.dist to preserve template###
cp cowrie.cfg.dist cowrie.cfg
### edit in nano ###
[telnet]
enabled = true
###install iptables###
sudo apt update
sudo apt install nftablessudo apt update
sudo apt install nftables
sudo iptables -t nat -A PREROUTING -p tcp --dport 22 -j REDIRECT --to-port 2222
sudo iptables -t nat -A PREROUTING -p tcp --dport 23 -j REDIRECT --to-port 2223
bin/cowrie start
### make sure it is running###
ps -aux
### monitor logs in real time###
tail -f cowrie.log
###move to tty directory to see all interactions with honeypot###
ls -all
